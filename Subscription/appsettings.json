{
  "Serilog": {
    "Using": [ "Serilog", "Serilog.Sinks.Console" ],
    "Enrich": [
      "FromLogContext"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Database=subscription;Username=postgres;Password=secret;"
  },
  
  "SubscriptionTierSettings" : {
    "SubscriptionTiers": [
      {
        "TierName": "free",
        "TierPrice": 0.00,
        "TierDurationDays": 30
      },
      {
        "TierName": "developer",
        "TierPrice": 9.99,
        "TierDurationDays": 30
      },
      {
        "TierName": "startup",
        "TierPrice": 99.99,
        "TierDurationDays": 30
      },
      {
        "TierName": "enterprise",
        "TierPrice": 100000.00,
        "TierDurationDays": 365
      }
    ]
  }
}
